@model IEnumerable<WebbappLabb1EF.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h3 style="border: 1px solid white; padding: 5px; width: 200px; text-align: center; margin: 0 auto; color: ghostwhite">Employees</h3>
<p>
        <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus"></i> Create New
    </a>
</p>
<table style="color: ghostwhite" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.EmployeeId" title="Edit">Edit <i class="bi bi-pencil"></i></a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.EmployeeId" title="Details">Details <i class="bi bi-binoculars"></i></a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.EmployeeId" title="Delete">Delete <i class="bi bi-trash"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
